FROM node:21.6.2


# Create app directory

WORKDIR /usr/src/app

# Install app dependencies

COPY app/package*.json ./
COPY app/* ./ 

RUN yarn install

# Bundle app source

COPY . .

# Build the app

RUN yarn build

# Run the app in development mode or production mode

CMD [  "yarn", "preview", "--host", "0.0.0.0", "--port", "80" ]

EXPOSE 80

